<h1>User info</h1>
<%= form_with model: @current_user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name" %>
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder:"profileImage", accept: "image/*" %>
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :body, placeholder:"introduction" %>
  <%= f.submit "Update User" %>
<% end %>
