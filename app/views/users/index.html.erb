<div>
  <%= render 'books/new', book: @book %>
</div>

<h1>Users</h1>
<table>

    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td>
          <img><%= image_tag book.user.get_profile_image(100,100) %></img>
        <td>
          <span><%= user.name %></span>
        </td>
        <td>
          <%= link_to users_path(user.id) do %>
          <span>Show</span>
        </td>
      </tr>
    <% end %>
  </table>
