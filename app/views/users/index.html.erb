<div>
  <%= flash[:notice] %>
</div>

<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'books/new', book: @book, user: current_user %>
    </div>

    <div class ="col-md-8 offset-md-1">
      <h2>Users</h2>

      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>

        <% @users.each do |user| %>
        <tr>
          <td>
          <%= link_to user_path(user) do %>
            <%= image_tag user.get_profile_image, size: '100x100' %>
          <% end %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to 'Show', user_path(user) %>
          </td>
        </tr>
        <% end %>
      </table>

    </div>

  </div>
</div>