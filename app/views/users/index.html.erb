<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'books/new', book: @book, user: current_user %>
    </div>

    <div class ="col-md-8 offset-md-1">
      <h2>Users</h2>

      <table>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>

        <% @users.each do |user| %>
        <tr>
          <td>
            <img><%= image_tag user.get_profile_image, size: '100x100' %></img>
          </td>
          <td>
            <span><%= user.name %></span>
          </td>
          <td>
            <span><%= link_to 'Show', users_path(@user) %></span>
          </td>
        </tr>
        <% end %>
      </table>

    </div>

  </div>
</div>