<div>
  <%= flash[:notice] %>
</div>

<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'books/new', book: @book, user: current_user %>
    </div>

    <div class ="col-md-8 offset-md-1">
      <h2>Books</h2>

        <table class="table table-hover table-inverse">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(current_user.id) do %>
                <%= image_tag book.user.get_profile_image, size: '100x100' %>
              <% end %>
            </td>
            <td>
              <%= link_to books_path(book.id) do %>
                <span><%= @book.title %></span>
              <% end %>
            </td>
            <td>
              <span><%= @book.body %></span>
            </td>
          </tr>
          <% end %>
        </table>

    </div>
    
  </div>
</div>
