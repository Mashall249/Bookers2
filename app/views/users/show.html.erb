<div>
  <%= render 'books/new', book: @book %>
</div>

<h1>Books</h1>
<table>

    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(current_user.id) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
        <td>
          <%= link_to books_path(book.id) do %>
          <span><%= @book.title %></span>
          <% end %>
        </td>
        <td>
          <span><%= @book.body %></span>
        </td>
      </tr>
    <% end %>
  </table>
