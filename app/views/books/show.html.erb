<div>
  <%= flash[:notice] %>
</div>

<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'books/new', book: @book, user: current_user %>
    </div>

    <div class ="col-md-8 offset-md-1">
      <h1>Book detail</h1>

<table>
  <% @books.each do |book| %>
    <tr>
        <td>
          <img><%= image_tag book.user.get_profile_image, size: '100x100' %></img>
          <% link_to user_path(@user) do %>
            <span><%= @user.name %></span>
          <% end %>
        </td>
        <td>
          <% link_to book_path(@book.id) do %>
            <span><%= book.title %></span>
          <% end %>
        </td>
        <td>
          <span><%= book.body %></span>
        </td>
        <td>
          <% if @book.user == current_user %>
          <span><%= link_to 'Edit', edit_book_path(@book.id) %></span>
          <% end %>
        </td>
        <td>
          <% if @book.user == current_user %>
          <span><%= link_to 'Destroy', book_path(@book.id),method: :delete, "data-confirm" => "Are you sure?" %></span>
          <% end %>
        </td>
    </tr>
  <% end %>
</table>