<div class ="container">
  <div class ="row">
    <div class ="col-md-3">
      <%= render 'books/new', book: @book, user: current_user %>
    </div>

    <div class ="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table>
        <tr>
          <th>Title</th>
          <th>Body</th>
        </tr>

        <% @books.each do |book| %>
        <tr>
          <td>
            <img><%= image_tag book.user.get_profile_image, size: '100x100' %></img>
          <td>
            <span><%= book.title %></span>
          </td>
          <td>
            <span><%= book.body %></span>
          </td>
          <td>
            <span><%= link_to 'Show', book_path(book.id) %></span>
          </td>
          <td>
            <span><%= link_to 'Edit', edit_book_path(book.id) %></span>
          </td>
          <td>
            <span><%= link_to 'Destroy', book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %></span>
          </td>
        </tr>
        <% end %>
      </table>

    </div>

  </div>
</div>