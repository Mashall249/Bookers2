<div>
  <%= render 'books/new', book: @book %>
</div>
<h1>Books</h1>

<table>

    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td>
          <img><%= image_tag book.user.get_profile_image(100,100) %></img>
        <td>
          <span><%= book.title %></span>
        </td>
        <td>
          <span><%= book.body %></span>
        </td>
        <td>
          <span><%= link_to 'Show', book_path(book.id) %></span>
        </td>
        <td>
          <span><%= link_to 'Edit', edit_book_path(book.id) %></span>
        </td>
        <td>
          <span><%= link_to 'Destroy', book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %></span>
        </td>
      </tr>
    <% end %>
  </table>